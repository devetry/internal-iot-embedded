void setup() {
  Serial.begin(11520);
  connectAWS();

  // Attempt to find the Co2 sensor
  if (!scd30.begin()) {
    Serial.println("Failed to find SCD30 chip");
    while (1) { delay(10); }
  }
  Serial.println("SCD30 Found!");
  Serial.print("Measurement Interval: "); 
  Serial.print(scd30.getMeasurementInterval()); 
  Serial.println(" seconds");
  
}

void loop() {
  publishMessage();
  client.loop();
  delay(1000);
}
